{
  "private": true,
  "name": "wren",
  "version": "1.0.0",
  "description": "set of reusable helpers",
  "bugs": "https://github.com/MichalTarasiuk/wren/issues",
  "keywords": [
    "react",
    "helpers",
    "utils",
    "monorepo",
    "typescript",
    "next.js",
    "srr",
    "best practices"
  ],
  "license": "MIT",
  "author": {
    "name": "Micha≈Ç Tarasiuk",
    "email": "tarasiuk.michal03@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MichalTarasiuk/wren"
  },
  "scripts": {
    "a": "npx lint-staged",
    "prepare": "husky install",
    "add-package": "ts-node scripts/addPackage.ts",
    "build:clean": "pnpm --filter \"./packages/**\" --parallel --no-bail run clean",
    "build:run": "pnpm run build:clean && rollup --config rollup.config.js",
    "style:lint": "eslint . --ext .ts,.tsx",
    "style:format": "prettier --write \"**/*.{ts,tsx}\"",
    "ts:find-deadcode": "pnpm --filter \"./packages/**\" --parallel --no-bail run ts:find-deadcode",
    "ts:check": "pnpm --filter \"./packages/**\" --parallel --no-bail run ts:check tsc",
    "test:jest": "jest --config",
    "test:jest:watch": "jest --config --watch",
    "test:jest:single-test": "jest --config --testNamePattern 'react:factories:createAtoms'"
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@changesets/cli": "2.25.2",
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-strip": "^3.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "29.2.3",
    "@types/node": "18.11.9",
    "@types/prompt": "1.1.4",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "@wren/typescript": "*",
    "@wren/utils": "*",
    "babel-jest": "29.3.1",
    "create-file": "1.0.1",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-functional": "4.4.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "44.0.2",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-mock-console": "2.0.0",
    "jsdom": "20.0.2",
    "lint-staged": "^13.0.3",
    "make-dir": "3.1.0",
    "mock-local-storage": "^1.1.23",
    "node-notifier": "10.0.1",
    "prettier": "2.7.1",
    "rollup": "^3.2.3",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "ts-prune": "0.10.3",
    "ts-toolbelt": "9.6.0",
    "typescript": "4.8.4",
    "zx": "7.1.1"
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "pnpm run style:format",
      "pnpm run style:lint"
    ]
  }
}
