{
  "private": true,
  "name": "@jupiter/core",
  "version": "1.0.0",
  "description": "set of reusable helpers",
  "bugs": "https://github.com/MichalTarasiuk/jupiter-core/issues",
  "keywords": [
    "react",
    "helpers",
    "utils",
    "monorepo",
    "typescript",
    "next.js",
    "srr",
    "best practices"
  ],
  "license": "MIT",
  "author": {
    "name": "Micha≈Ç Tarasiuk",
    "email": "tarasiuk.michal03@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MichalTarasiuk/jupiter-core"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "find-deadcode": "ts-prune -p tsconfig.base.json",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "tsc --build --clean",
    "prepare": "husky install",
    "clean": "pnpm --filter \"./packages/**\" --parallel --no-bail run clean",
    "test:jest": "jest --config",
    "test:jest:watch": "jest --config --watch",
    "test:jest:single-test": "jest --config --testNamePattern 'react:factories:createAtoms'",
    "add-package": "ts-node scripts/addPackage.ts",
    "build": "rollup --config rollup.config.js"
  },
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@babel/preset-env": "7.19.4",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@changesets/cli": "2.25.1",
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@jupiter/utils": "*",
    "@rollup/plugin-typescript": "^9.0.2",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "29.2.0",
    "@types/node": "18.11.7",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "babel-jest": "29.2.2",
    "create-file": "1.0.1",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-functional": "4.4.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-unicorn": "44.0.2",
    "husky": "8.0.1",
    "jest": "29.2.2",
    "jest-environment-jsdom": "29.2.2",
    "jest-mock-console": "2.0.0",
    "jsdom": "20.0.1",
    "load-json-file": "^7.0.1",
    "make-dir": "3.1.0",
    "node-notifier": "10.0.1",
    "prettier": "2.7.1",
    "rollup": "^3.2.3",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "ts-prune": "0.10.3",
    "ts-toolbelt": "9.6.0",
    "typescript": "4.8.3",
    "zx": "7.1.1"
  }
}
